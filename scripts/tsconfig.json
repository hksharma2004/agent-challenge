{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "..",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "pg"],
    "typeRoots": ["./node_modules/@types", "../src/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./**/*.ts", "../src/**/*.ts", "../src/types/**/*.d.ts"]
}
